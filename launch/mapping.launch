<!-- -*- mode: XML -*- -->
<launch>
  <arg name="racecar_version" default="racecar-v2" />
  <arg name="run_camera" default="false"/>
  <arg name="resolution" default="0.05"/>


  <include file="$(find solace)/launch/includes/$(arg racecar_version)-teleop.launch.xml">
    <arg name="racecar_version" value="$(arg racecar_version)" />
    <arg name="run_camera" value="$(arg run_camera)" />
  </include>

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="base_frame" value="base_link"/>
    <param name="map_frame" value="gmapping_map"/>
    <!--<param name="odom_frame" value="hector_map"/>-->
    <param name="particles" value="30"/>
    <param name="maxUrange" value="8"/>
    <param name="maxRange" value="12"/>
    <param name="delta" value="$(arg resolution)"/>
    <param name="linearUpdate" value=".10"/>
    <param name="angularUpdate" value=".10"/>    
    <param name="temporalUpdate" value="1.0"/>
    <param name="map_update_interval" value="2.0"/>
  </node>

</launch>
